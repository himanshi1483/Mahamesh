@model Mahamesh.Models.FeedbackModel

@{
    ViewBag.Title = "Create";
}


<style>
    textarea {
        border-radius: 5px;
        width: 100%;
    }
</style>
<div class="container body-content" id="#maincontent" style="margin-top:70px; margin-bottom: 150px;">
    <div class="panel panel-primary-2" style="box-shadow: 0 2px 2px rgba(0,0,0,.3);">
        <div class="panel-heading panel-primary-2 text-center">
            <h3 class="panel-title">New Feedback</h3>
        </div>
        <div class="panel-body">
            <div class="row">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            @Html.Label("Subject", htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.FeedbackTitle, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FeedbackTitle, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group" style="padding-bottom:50px">
                            <div class="col-md-2"></div>
                            @Html.LabelFor(model => model.FeedbackDescription, htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-md-6">
                                @Html.TextAreaFor(model => model.FeedbackDescription, new  { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FeedbackDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2"></div>
                            @Html.LabelFor(model => model.FeedbackDate, htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.FeedbackDate, new { htmlAttributes = new { @class = "form-control date-picker", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.FeedbackDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2"></div>
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8 text-center">
                                <input type="submit" value="Save & Send" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>